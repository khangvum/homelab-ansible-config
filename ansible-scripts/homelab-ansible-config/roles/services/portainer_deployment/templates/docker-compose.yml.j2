---
services:
  portainer:
    image: portainer/portainer-ce:latest
    container_name: portainer
    restart: always
    volumes:
      - /etc/localtime:/etc/localtime:ro
      - /var/run/docker.sock:/var/run/docker.sock
      - portainer_data:/data
    ports:
      - 9443:9443 # HTTPS management port
      - 8000:8000 # For Edge Agent communication

volumes:
  portainer_data:
    name: portainer_data
